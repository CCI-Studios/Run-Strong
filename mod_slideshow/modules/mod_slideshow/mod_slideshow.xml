<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>slideshow</name>
	<author>Jonathan Bennett</author>
	<creationDate>Nov 1, 2011</creationDate>
	<copyright>Copyright (C) 2011 CCI Studios. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>jbennett@ccistudios.com</authorEmail>
	<authorUrl>www.ccistudios.com</authorUrl>
	<version>1.5.0</version>
	<description></description>
	<files>
		<filename module="mod_slideshow">mod_slideshow.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" default="" label="Title text" description="Title of module (visible on site frontend)." />
				<field name="image_path" type="folderlist" directory="images/galleries" hide_default="true" default="" label="Image Path" description="Location of images." />
				<field name="description" type="textarea" default="" label="Description" description="What you want it to say." />
				<field name="link" type="text" default="" label="Link" description="" />
				<field name="link_text" type="text" default="" label="Link Text" description="What you want the link to say" />
				<field name="width" type="hidden" default="940" />
				<field name="height" type="hidden" default="350" />
				
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
			</fieldset>
		</fields>
	</config>
</install>